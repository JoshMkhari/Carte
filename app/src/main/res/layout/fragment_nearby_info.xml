<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_nearby_info"
    android:padding="10dp">
    <View
        android:id="@+id/view_menu_indicator_information_nearby"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:background="@drawable/shape_bottom_sheet_menu_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_marker_Title_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default"
        android:layout_marginTop="20dp"
        android:textColor="?colorSecondary"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_menu_indicator_information_nearby" />

    <TextView
        android:id="@+id/textView_location_marker_data_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Location data"
        android:textColor="#777777"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_marker_Title_nearby" />

    <ImageButton
        android:id="@+id/imageButton_close_information_menu_nearby"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_close_24"
        app:layout_constraintBottom_toBottomOf="@+id/textView_location_marker_data_nearby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_marker_Title_nearby" />

    <Button
        android:id="@+id/button_information_directions_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:text="Directions"
        android:textColor="#5fb2ff"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_share_location_nearby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_location_marker_data_nearby" />


    <ImageButton
        android:id="@+id/imageButton_share_location_nearby"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_information_directions_nearby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/image_share_icon"
        app:layout_constraintTop_toTopOf="@+id/button_information_directions_nearby" />

    <ImageButton
        android:id="@+id/imageButton_nearby"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_share_location_nearby"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/image_favourite_icon"
        app:layout_constraintStart_toEndOf="@+id/imageButton_share_location_nearby"
        app:layout_constraintTop_toTopOf="@+id/imageButton_share_location_nearby" />

    <TextView
        android:id="@+id/textView_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Hours:"
        android:textSize="20sp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_information_directions_nearby" />


    <TextView
        android:id="@+id/textView2_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:textSize="20sp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nearby" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Details:"
        android:layout_marginVertical="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_nearby" />

    <TextView
        android:id="@+id/nearbyHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:layout_margin="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView_nearby"
        app:layout_constraintTop_toBottomOf="@+id/button_information_directions_nearby" />

    <TextView
        android:id="@+id/nearbyRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Loading..."
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView_nearby"
        app:layout_constraintTop_toBottomOf="@+id/textView_nearby" />

    <TextView
        android:id="@+id/nearbyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Loading..."
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView_nearby"
        app:layout_constraintTop_toBottomOf="@+id/textView2_nearby" />



</androidx.constraintlayout.widget.ConstraintLayout>