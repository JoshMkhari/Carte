<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".menu.sub.Fragment_Settings"
    android:background="?colorPrimary">

    <View
        android:id="@+id/view_settings_title_background_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_title_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="GENERAL"
        android:textColor="?colorSecondary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_settings_title_background_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_settings_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_settings_title_background_one"
        tools:listitem="@layout/recyclerview_multi_option_layout" />

    <View
        android:id="@+id/view_settings_title_background_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_title_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_settings_general" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="NAVIGATION"
        android:textColor="?colorSecondary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_settings_title_background_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_settings_general" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_settings_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_settings_title_background_two"
        tools:listitem="@layout/recyclerview_multi_option_layout" />



</androidx.constraintlayout.widget.ConstraintLayout>