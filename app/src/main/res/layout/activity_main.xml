<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_navigating"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape_current_street_information_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_current_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Street"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <ImageView
            android:id="@+id/imageView_currentSpeed"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/image_current_speed_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_currentSpeed_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_currentSpeed"
            app:layout_constraintEnd_toEndOf="@+id/imageView_currentSpeed"
            app:layout_constraintStart_toStartOf="@+id/imageView_currentSpeed"
            app:layout_constraintTop_toTopOf="@+id/imageView_currentSpeed" />

        <ImageButton
            android:id="@+id/volume_control"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_currentSpeed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView_currentSpeed" />
    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container_view_main_activity_background"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:defaultNavHost="true"
        android:nestedScrollingEnabled="true"
        tools:layout="@layout/fragment_maps" />

    <include layout="@layout/bottom_sheet_menu_layout"
        app:layout_anchorGravity="top|end"
        android:id="@+id/layout_menu"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>