<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp">

    <View
        android:id="@+id/view_option_layout_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_bottom_sheet_menu_indicator"
        app:layout_constraintBottom_toTopOf="@+id/textView_option_layout_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_option_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Fuel type"
        android:textColor="?colorSecondary"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_selected_state"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_option_layout_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="10dp"
        android:text="Gasoline"
        android:textColor="?colorOnPrimary"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_selected_state"
        app:layout_constraintTop_toBottomOf="@+id/textView_option_layout_title" />

    <ImageView
        android:id="@+id/imageView_option_layout_arrow_click"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintTop_toTopOf="@+id/textView_option_layout_title" />

    <ImageView
        android:id="@+id/imageView_selected_state"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/image_selected_radio_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>