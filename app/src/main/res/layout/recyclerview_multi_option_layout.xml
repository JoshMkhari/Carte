<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp">

    <View
        android:id="@+id/view_option_layout_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_bottom_sheet_menu_indicator"
        app:layout_constraintBottom_toTopOf="@+id/textView_option_layout_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/textView_option_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Fuel type"
        android:textColor="?colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_option_layout_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="?colorOnPrimary"
        android:text="Gasoline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_option_layout_title"
        android:paddingBottom="10dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintTop_toTopOf="@+id/textView_option_layout_title" />


</androidx.constraintlayout.widget.ConstraintLayout>